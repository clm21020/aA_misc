<h1>Make a new cat rental request!</h1>

<form action="/cat_rental_requests" method="post">

  <div><label>Cat
    <select name="cat_rental_request[cat_id]">
      <% @cats.each do |cat| %>
        <option value=<%= cat[:id] %>><%= cat[:name] %></option>
      <% end %>
    </select>
  </label></div>

  <div><label>Start Date
    <input type="date" name="cat_rental_request[start_date]">
  </label></div>

  <div><label>End Date
    <input type="date" name="cat_rental_request[end_date]">
  </label></div>

  <input type="submit" value="Create Cat Rental Request">
</form>
